    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    
    <script>
        const targetUrl = 'https://cochlea.pages.dev';
        
        // æ£€æµ‹æ˜¯å¦å¾®ä¿¡
        function isWeChat() {
            return /MicroMessenger/i.test(navigator.userAgent);
        }
        
        // ç”ŸæˆäºŒç»´ç 
        function generateQRCode() {
            if (typeof QRCode !== 'undefined') {
                new QRCode(document.getElementById("qrcode"), {
                    text: targetUrl,
                    width: 180,
                    height: 180,
                    colorDark: "#000000",
                    colorLight: "#ffffff",
                    correctLevel: QRCode.CorrectLevel.H
                });
            }
        }
        
        // å°è¯•è·³è½¬å¤–éƒ¨æµè§ˆå™¨
        document.getElementById('openBtn').addEventListener('click', function() {
            if (isWeChat()) {
                // å¾®ä¿¡ç¯å¢ƒï¼šå°è¯•å”¤èµ·å¤–éƒ¨æµè§ˆå™¨
                window.location.href = 'weixin://dl/browser/?url=' + encodeURIComponent(targetUrl);
                
                // 3ç§’åæ˜¾ç¤ºæ‰‹åŠ¨æç¤º
                setTimeout(function() {
                    alert('å¦‚æœæœªèƒ½è‡ªåŠ¨è·³è½¬ï¼Œè¯·æŒ‰ç…§ä¸Šæ–¹æç¤ºæ‰‹åŠ¨æ“ä½œ');
                }, 3000);
            } else {
                // éå¾®ä¿¡ç¯å¢ƒç›´æ¥è·³è½¬
                window.location.href = targetUrl;
            }
        });
        
        // å¤åˆ¶é“¾æ¥
        document.getElementById('copyBtn').addEventListener('click', function() {
            navigator.clipboard.writeText(targetUrl).then(function() {
                alert('âœ… é“¾æ¥å·²å¤åˆ¶ï¼\nè¯·ç²˜è´´åˆ°æ‰‹æœºæµè§ˆå™¨ä¸­æ‰“å¼€');
            }).catch(function() {
                // å…¼å®¹æ€§å›é€€
                const textarea = document.createElement('textarea');
                textarea.value = targetUrl;
                document.body.appendChild(textarea);
                textarea.select();
                document.execCommand('copy');
                document.body.removeChild(textarea);
                alert('âœ… é“¾æ¥å·²å¤åˆ¶ï¼\nè¯·ç²˜è´´åˆ°æµè§ˆå™¨ä¸­æ‰“å¼€');
            });
        });
        
        // ç›´æ¥è®¿é—®æŒ‰é’®
        document.getElementById('directBtn').addEventListener('click', function(e) {
            if (isWeChat()) {
                e.preventDefault();
                alert('æ£€æµ‹åˆ°å¾®ä¿¡ç¯å¢ƒï¼Œè¯·ä½¿ç”¨ä¸Šæ–¹æ–¹æ³•è·³è½¬');
            }
        });
        
        // é¡µé¢åŠ è½½æ—¶æ“ä½œ
        window.onload = function() {
            generateQRCode();
            
            // å¦‚æœæ˜¯å¾®ä¿¡ï¼Œæ˜¾ç¤ºæé†’
            if (isWeChat()) {
                console.log('å¾®ä¿¡ç¯å¢ƒæ£€æµ‹ï¼Œæ˜¾ç¤ºè·³è½¬æç¤º');
            }
        };
    </script>
